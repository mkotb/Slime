{
    "name": "Slime",
    "version": "0.1",
    "description": "Stick your windows on top!",
    "manifest_version": 2,
    "permissions": [
        "tabCapture",
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "commands": {
        "stick": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Stick the current window on top!"
        }
    },
    "browser_action": {},
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}